
$red = #D73E4D
$black = #292929
$grey = #6f6f6f
$light-grey = #f3f3f3
$dark-blue = #232a34
$basic = #d6973d
$advanced = #375099
$premium = #179680
$ff = 'Raleway', sans-serif

*
*::before
*::after
    padding 0
    margin 0
    box-sizing border-box

html
    height 100%
    font-size 50%
    @media(min-width 37.5em)
        font-size 62.5%

body
    height 100%
    font-family $ff


ul
ol
li
    list-style none

a
    text-decoration none
section
    &#home
        position relative
        min-height 100vh
        padding-bottom 4rem
        background-color #000
    &#about
        padding 4rem 0
