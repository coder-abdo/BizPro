.portfolio
    padding 5rem 1rem
    text-align center
    &__title
        font-size 3rem
        font-weight 700
        text-transform uppercase
        position relative
        padding-bottom 2rem
        margin-bottom 5rem
        &::after
            content ''
            position absolute
            display block
            bottom 0
            left 50%
            width 10%
            height 2px
            background-color $red
            transform translateX(-50%)
    &__content
        font-size 2rem
        font-weight 500
        color $grey
        margin-bottom 2rem
    .button-group
        flex(flex-start, center)
        flex-wrap wrap
        margin-bottom 4rem
.works
    display grid
    grid-template-rows repeat(9, minmax(25rem, 1fr))
    grid-template-columns minmax(25rem, 1fr)
    overflow hidden
    grid-gap 2rem
    @media(min-width 50em)
        grid-template-rows repeat(4, minmax(25rem, 1fr))
        grid-template-columns repeat(2, minmax(25rem, 1fr))
    @media(min-width 62em)
        grid-template-rows repeat(3, minmax(25rem, 1fr))
        grid-template-columns repeat(3, minmax(25rem, 1fr))
    .work
        background-size cover
        background-position center center
        background-repeat no-repeat
        overflow hidden
        for num in (1..9)
            &:nth-child({num})
                background-image url("../images/" + num + ".jpg")
        &:hover
            .work__content
                transform scale(1)
            .work__name
                transform translateY(0)
            .work__tags
                transform translateY(0)
        &__content
            width 100%
            height 100%
            background-color rgba($red, .8)
            outline 2px solid #ffffff
            outline-offset -2rem
            flex(center, center)
            flex-direction column
            color #ffffff
            transform scale(0)
            transition transform 300ms
        &__name
            font-size 2rem
            font-weight 500
            margin-bottom 2rem
            transform translateY(-10rem)
            transition transform 300ms 100ms
        &__tags
            flex(flex-start, center)
            flex-wrap wrap
            transform translateY(10rem)
            transition transform 300ms 100ms
        &__tag
            font-size 1.4rem
