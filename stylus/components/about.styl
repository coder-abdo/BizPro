.about
    text-align center
    &__title
        font-size 3rem
        font-weight 700
        text-transform uppercase
        margin-bottom 2rem
        color $black
    &__content
        font-size 2rem
        font-weight 500
        margin-bottom 4rem
        color $grey
    &__features
        display grid
        grid-template-rows repeat(4, 1fr)
        grid-template-columns 1fr
        grid-gap 4rem
        @media(min-width 50em)
            grid-template-rows repeat(2, 1fr)
            grid-template-columns repeat(2, 1fr)
        @media(min-width 62em)
            grid-template-rows 1fr
            grid-template-columns repeat(4, 1fr)

.feature
    flex(flex-start, center)
    flex-direction column
    &:hover
        .feature__icon
            background-color $red
            color #fff
    &__icon
        flex(center, center)
        width 10rem
        height 10rem
        border-radius 50%
        border 1px solid $red
        color $red
        font-size 2.5rem
        transition background-color 300ms
        margin-bottom 2rem
    &__title
        font-size 2.2rem
        font-weight 700
        margin-bottom 2rem
    &__desc
        font-size 1.8rem
        font-weight 400
        color $grey
        margin-bottom 2rem
        