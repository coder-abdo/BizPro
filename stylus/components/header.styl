.header
    flex(space-between, center)
    position relative
    height 7.5rem
    padding-right 1rem
    z-index 1000
    background-color #333333
    &.sticky
        position fixed
        top 0
        left 0
        width 100%
        background-color rgba(#333, .5)
    @media(min-width 50em)
        padding-right 0
        flex-direction column
        justify-content flex-start
    @media(min-width 62em)
        flex-direction row
        justify-content space-between
    &__btn
        background-color transparent
        border none
        color #ffffff
        text-transform uppercase
        font-family $ff
        font-size 2rem
        @media(min-width 50em)
            display none
        i
            margin-left .5rem
        &:hover
            cursor pointer
        &:focus
            outline none
    &__nav
        position absolute
        top 100%
        width 100%
        color #fff
        padding 2rem 0
        transform scaleY(0)
        transition transform 300ms cubic-bezier(0.68, -0.55, 0.265, 1.55)
        transform-origin top left
        &.show
            transform scaleY(1)
            background-color #fff
            color #333333
            z-index 1000
        @media(min-width 50em)
            transform scaleY(1)
            width 100%
        @media(min-width 62em)
            position relative
            top 0
.nav
    &__list
        width 100%
        flex(flex-start, center)
        flex-direction column
        @media(min-width 50em)
            flex-direction row
            justify-content space-around
    &__item
        @media(max-width 50em)
            margin-bottom 2rem
    &__link
        color currentColor
        font-size 2rem
        display block
        transition color 300ms
        text-transform uppercase
        @media(min-width 50em)
            font-size 1.6rem
        &:hover
            color $red
        &.active
            color $red
