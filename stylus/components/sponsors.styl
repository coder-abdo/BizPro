.sponsors
    background-color $light-grey
    padding 4rem 2rem
    flex()
.sponsor
    border 1px solid $grey
    &:not(:first-child)
        border-left none
    padding  1rem 2rem
    width 100%
    height 11.8rem
    flex(center, center)
    img
        width 10rem
        height 8rem


 .sponsors.owl-theme .owl-dots .owl-dot span
    width 1.4rem
    height 1.4rem
    background-color #fff
    border 1px solid $grey
 .sponsors.owl-theme .owl-dots .owl-dot.active span
    border-color $red
    background-color $red