.team
    padding 4rem 2rem
    &__title
        font-size 4rem
        font-weight 700
        text-align center
        position relative
        padding-bottom 1rem
        color $black
        margin-bottom 4rem
        &::after
            content ''
            position absolute
            display block
            background-color $red
            width 10%
            height 2px
            bottom 0
            left 50%
            transform translateX(-50%)
    &__content
        font-size 2.2rem
        font-weight 300
        color $grey
        margin-bottom 4rem
        text-align center
    &__members
        display grid
        grid-template-rows repeat(3, 1fr)
        grid-template-columns 1fr
        grid-gap 2rem
        @media(min-width 50em)
            grid-template-rows 1fr
            grid-template-columns repeat(3, 1fr)
    &__member
        position relative
        &:hover
            .team__back
                opacity 1
                visibility visible
            .team__summary
                transform translateY(0)
            .team__social
                transform translateY(0)
            .team__detail
                transform translateY(-5rem)
                opacity 0
    &__back
        opacity 0
        visibility hidden
        transition opacity 300ms
        height 100%
        width 100%      
        position absolute
        top 0
        left 0
        flex(space-between, center)
        flex-direction column
    &__front
        flex(center, center)
        flex-direction column
    &__img
        width 100%
    &__detail
        width 100%
        height 30%
        background-color lighten($grey, 55%)
        padding 2rem 0
        flex(flex-start, center)
        flex-direction column
        transition-property transform, opacity
        transition-duration 300ms
    &__name
        color $dark-blue
        font-size 2.5rem
        font-weight 700
        margin-bottom 1.5rem
        &--redbd
            border 1px solid $red
            padding 1rem 2rem
    &__job
        font-size 1.8rem
        font-weight 300
        color $black
        text-transform capitalize
        &--grey
            font-weight 700
    &__summary
        flex(flex-start, center)
        flex-direction column
        padding-top 2rem
        padding-left 1rem
        padding-right 1rem
        transform translateY(-30rem)
        transform-origin top left
        transition transform 300ms
        background-color rgba(#fff, .5)
        width 100%
        height 81.5%
        z-index 1000
        color $dark-blue
    &__text
        font-size 1.4rem
        text-align center
        font-weight 300
        margin-top 2rem
    &__social
        width 100%
        flex(center, center)
        height calc(100% - 81.5%)
        transform translateY(10rem)
        transform-origin bottom left
        transition transform 300ms
        z-index 100
        .social
            width 5rem
            height 5rem
            border-radius 50%
            border 1px solid transparent
            flex(center, center)
            transition-property background-color, color
            transition-duration 300ms
            &:hover
                cursor pointer
                &:first-child
                    background-color #677fb5
                    color #fff
                &:nth-child(2)
                    background-color #70c2e9
                    color #fff
                &:nth-child(3)
                    background-color #d8545d
                    color #fff
                &:nth-child(4)
                    background-color #007ab9
                    color #fff
            &:not(:last-child)
                margin-right 2rem
            &__link
                color currentColor
                font-size 2rem
            &:first-child
                border-color #677fb5
                color #677fb5
            &:nth-child(2)
                border-color #70c2e9
                color #70c2e9
            &:nth-child(3)
                border-color #d8545d
                color #d8545d
            &:nth-child(4)
                border-color #007ab9
                color #007ab9