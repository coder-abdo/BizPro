.contact
    padding 4rem 2rem
    background-color #fff
    &__title
        font-size 4rem
        font-weight 700
        color $black
        text-align center
        margin-bottom 2rem
    &__content
        font-size 1.8rem
        font-weight 300
        color $grey
        margin-bottom 4rem
    &__details
        display grid
        grid-template-rows repeat(3, 1fr)
        grid-template-columns 1fr
        grid-gap 4rem
        margin-bottom 4rem
        @media(min-width 50em)
            grid-template-rows 1fr
            grid-template-columns repeat(2, 1fr)
        @media(min-width 62em)
            grid-template-columns repeat(3, 1fr)
    &__detail
        flex()
        .icon
            width 6rem
            height 6rem
            border-radius 50%
            background-color $red
            color #fff
            font-size 2rem
            flex(center, center)
            margin-right 2rem
        .text
            flex(space-around, flex-start)
            flex-direction column
            h3
                font-size 1.8rem
                font-weight 500
            h4
                font-size 1.4rem
                font-weight 300
                color $grey
    &__message
        flex()
        flex-direction column
        h2
            font-size 4rem
            font-weight 700
            margin-bottom 2rem
            text-transform capitalize
        .message
            display grid
            grid-template-rows repeat(4, 1fr) 4fr
            grid-template-columns 1fr
            grid-gap 4rem
            font-family $ff
            @media(min-width 50em)
                grid-template-rows repeat(3, 1fr) 4fr
                grid-template-columns repeat(2, 1fr)
            @media(min-width 62em)
                grid-template-rows repeat(2, 1fr) 4fr
                grid-template-columns repeat(3, 1fr)
            input
                height 4rem
                padding 2rem
            textarea
                padding 2rem
                @media(min-width 50em)
                    grid-row 4 / 5
                    grid-column 1 / -1
                @media(min-width 62em)
                    grid-row 3 / 4
            .f-name
                @media(min-width 50em)
                    grid-row 1 / 2
                    grid-column 1 / 2
            .l-name
                @media(min-width 50em)
                    grid-row 1 / 2
                    grid-column 2 / 3
            .email
                @media(min-width 50em)
                    grid-row 2 / 3
                    grid-column 1 / -1
                @media(min-width 62em)
                    grid-row 1 / 2
                    grid-column 3 / 4
            .subject
                @media(min-width 50em)
                    grid-row 3 / 4
                    grid-column 1 / -1
                @media(min-width 62em)
                    grid-row 2 / 3



::-webkit-input-placeholder
    color $grey
    font-family $ff
    font-size 1.4rem