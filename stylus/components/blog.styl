.blog
    padding 4rem 2rem
    &__title
        font-size 4rem
        font-weight 700
        color $black
        text-align center
        margin-bottom 4rem
        padding-bottom 2rem
        position relative
        &::after
            content ''
            position absolute
            display block
            background-color $red
            width 5%
            height 2px
            bottom 0
            left 50%
            transform translateX(-50%)
    &__content
        font-size 1.8rem
        color $grey
        text-align center
        margin-bottom 2rem
    &__blogs
        display grid
        grid-template-rows repeat(3, 1fr)
        grid-template-columns 1fr
        grid-gap 4rem
        @media(min-width 50em)
            grid-template-rows 1fr
            grid-template-columns repeat(2, 1fr)
        @media(min-width 62em)
            grid-template-columns repeat(3, 1fr)
    &__container
        overflow hidden
        flex(flex-start, flex-start)
        flex-direction column
        for num in (1..3)
            &:nth-child({num})
                .blog__img
                    background-image url("../images/blog-" + num + ".jpg")
    &__img
        width 100%
        min-height 25rem
        background-size cover
        position relative
        margin-bottom 2rem
        &:hover
            cursor pointer
            .inner
                transform scale(1)
        .inner
            width 100%
            height 100%
            background-color rgba($black, .5)
            color $red
            position absolute
            top 0
            left 0
            z-index 100
            flex(center, center)
            font-size 2rem
            transform scale(0)
            transition transform 300ms
    &__heading
        color $black
        font-size 2rem
        text-align-last left
        margin-bottom 2rem
        &:hover
            color $red
        a
            color currentColor
    &__post
        font-size 1.6rem
        text-align-last left
        font-weight 300
        text-transform capitalize
        color $grey
        margin-bottom 2rem
        a
            color $red
            text-transform lowercase
    &__detail
        font-size 2rem
        font-weight 300
        color $grey