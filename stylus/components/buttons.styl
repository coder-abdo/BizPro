.btn
    &--red
        color #ffffff
        border 1px solid $red
        padding 1rem 2rem
        font-size 1.6rem
        position relative
        z-index 100
        margin-top 2rem
        &::before
        &::after
            content ''
            position absolute
            top 0
            left 0
            width 100%
            height 100%
        &::before
            z-index -2
        &::after
            background-color $red
            transition transform 300ms cubic-bezier(0.68, -0.55, 0.265, 1.55)
            transform scaleX(0)
            transform-origin top left
            z-index -1
        &:hover
            &::after
                transform scaleX(1)
    &--about
        color $black
        &:hover
            color #fff
    &--price
        background-color $red
        color #fff
        padding 2rem 4rem
        text-transform capitalize
        font-size 2.5rem
        border 1px solid $red
        transition-property background-color, color
        transition-duration 300ms
        &:hover
            background-color #fff
            color $red
    &--readme
        color $red
        font-size 2rem
        font-weight 500
        text-transform capitalize
        .icon
            display inline-block
            transform translateX(0.5rem)
            transition transform 250ms
        &:hover
            .icon
                transform translateX(1rem)

.button
    background-color transparent
    border none
    font-size 1.4rem
    font-weight 500
    padding 1rem 2rem
    position relative
    text-transform uppercase
    color $black
    &:focus
        outline none
    &::after
        content ''
        position absolute
        display block
        bottom 0
        left 5%
        width 90%
        height 2px
        background-color $red
        transform scaleX(0)
        transform-origin bottom left
        transition transform 300ms
    &:hover
        cursor pointer
        &::after
            transform scaleX(1)
    &.is-checked
        &::after
            transform scaleX(1)
            
    